{% extends 'base.html.twig' %}
{% block title%} Liste des groupes{% endblock %}
{% block body %}


    {% if groupes %}
        <table id="articles" class="table table-striped">
            <thead >
            <tr>
                <th>Libelle</th>
                <th>Date Debut</th>
                <th>Date Fin</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for groupe in groupes %}
                <tr>
                    <td >{{groupe.libelle}}</td>
                    <td>{{ groupe.dateDebut|date("m/d/Y") }}</td>
                    <td>{{ groupe.dateFin|date("m/d/Y") }}</td>
                    <td>{{ groupe.description }}</td>
                    <td ><a href="/groupe/{{ groupe.id }}" class="btn btn-success">Détails</a>
                        <a href="/groupe/{{ groupe.id }}" class="btn btn-danger"
                           onclick="return confirm('Etes-vous sûr de supprimer cet article?');">Supprimer</a>
                        <a href="/groupe/edit/{{ groupe.id }}" class="btn btn-primary">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun articles</p>
    {% endif %}
{% endblock %}